@model Subscribers.Models.Subcrib

@{
    ViewData["Title"] = "Редактирование подписки";
}

<div align="center">
    <h2>Редактирование подписки</h2>
    <form asp-action="Update" method="post">
        <input type="hidden" asp-for="Iduser" />
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Name">Название</label>
            <input asp-for="Name" class="form-input" />
        </div>

        <div class="form-group">
            <label asp-for="Type">Тип</label>
            <input asp-for="Type" class="form-input" />
        </div>

        <div class="form-group">
            <label asp-for="Discription">Описание</label>
            <input asp-for="Discription" class="form-input" />
        </div>

        <div class="form-group">
            <label asp-for="Price">Цена</label>
            <input asp-for="Price" class="form-input" />
        </div>

        <div class="form-group">
            <label asp-for="Endtime">Дата окончания</label>
            <input asp-for="Endtime" type="date" class="form-input" />
        </div>

        <div class="form-group">
            <button type="submit" class="btn-save">Сохранить</button>
        </div>
    </form>
</div>