@{
    ViewData["Title"] = "Мои расходы на подписки";
}

<div align="center">
    <h2>Мои расходы на подписки</h2>

    @if (ViewBag.TotalExpenses != null && ViewBag.TotalExpenses > 0)
    {
        <div class="total-expenses">
            <span class="total-label">Общая сумма расходов:</span>
            <span class="total-amount">@ViewBag.TotalExpenses.ToString("N0") ₽</span>
        </div>

        <h3>Список подписок:</h3>
        <div class="subs-container">
            @foreach (var sub in ViewBag.Subscriptions)
            {
                <div class="subs-card">
                    <div class="subs-info">
                        <h1>@sub.Name</h1>
                        <p>Цена: @sub.Price.ToString("N0") ₽</p>
                        <p class="end-date">До @sub.Endtime.ToShortDateString()</p>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="no-subs">У вас нет активных подписок.</p>
    }
</div>